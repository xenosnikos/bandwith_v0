@inject NavigationManager NavigationManager

@page "/"

<div class="jumbotron text-center bg-primary text-white">
    <h1 class="display-4">Welcome to Bandwith!</h1>
    <p class="lead">The freelancer-focused marketplace.</p>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2>For Freelancers</h2>
            <p>
                We understand the challenges of freelancing. That's why we've built a platform that's dedicated to providing you with positive working experiences. With Bandwith, you can find rewarding projects, connect with reputable employers, and get paid securely and on time.
            </p>
            <p>
                <a class="btn btn-primary btn-lg" @onclick="() => NavigateToSignup()" role="button">Join as a Freelancer &raquo;</a>
            </p>
        </div>
        <div class="col-md-6">
            <h2>For Employers</h2>
            <p>
                Looking for top talent for your projects? Bandwith connects you with skilled freelancers from a wide range of fields. Post your projects, receive bids, and hire freelancers, all in one place. Plus, our escrow service ensures that payments are secure and transparent.
            </p>
            <p>
                <a class="btn btn-primary btn-lg" @onclick="() => NavigateToSignup()" role="button">Hire a Freelancer &raquo;</a>
            </p>
        </div>
    </div>
</div>


@code {
    private void NavigateToSignup()
    {
        NavigationManager.NavigateTo("/signup");
    }
}
